<% if @receipts.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Receipt.human_attribute_name 'number' %></th>
        <th><%= Receipt.human_attribute_name 'customer' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @receipts.each do |receipt| %>
        <tr>
          <td><%= receipt.number %></td>
          <td><%= receipt.customer %></td>
          <td><%= link_to_show receipt %></td>
          <td><%= link_to_edit edit_receipt_path(receipt) %></td>
          <td><%= link_to_destroy receipt %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to_new new_book_receipt_path(@book), class: 'btn btn-primary' %>
