<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= link_to organization, organization %></h3>
    </div>

    <div class="panel-body">
      <% if organization.books.empty? %>
        <div class="alert alert-warning">
          <%= t '.empty_books_html' %>
        </div>
      <% else %>
        <% organization.books.each_slice(3) do |books| %>
          <div class="row">
            <%= render partial: 'book', collection: books %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= link_to t('organizations.new.book'), new_organization_book_path(organization), class: 'btn btn-sm btn-default' %>
    </div>
  </div>
</div>
