<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      <%= t ".#{flow}_books_title" %>
      <small>
        <%= add_book_link organization: organization, flow: flow %>
      </small>
    </h4>
  </div>

  <div class="panel-body">
    <% if books.empty? %>
      <div class="alert alert-warning">
        <p><%= t ".empty_#{flow}_books_html" %></p>
      </div>
    <% else %>
      <% books.each_slice(3) do |books| %>
        <div class="row">
          <%= render partial: 'launchpad/book', collection: books %>
        </div>
        <div class="row">
          <% books.each do |book| %>
            <div class="col-md-4">
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
