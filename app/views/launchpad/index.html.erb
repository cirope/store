<% if @organizations.empty? %>
  <div class="alert alert-warning">
    <%= t '.empty' %>
  </div>
<% else %>
  <% @organizations.each_slice(2) do |organizations| %>
    <div class="row">
      <%= render partial: 'organization', collection: organizations %>
    </div>
  <% end %>

  <hr />
<% end %>

<p>
  <%= link_to t('organizations.index.new'), new_organization_path, class: 'btn btn-default' %>
</p>
