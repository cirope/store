<% if @books.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Book.human_attribute_name 'kind' %></th>
        <th><%= Book.human_attribute_name 'last_used_number' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.kind %></td>
          <td><%= book.last_used_number %></td>
          <td><%= link_to_show book %></td>
          <td><%= link_to_edit [:edit, book] %></td>
          <td><%= link_to_destroy book %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to_new new_organization_book_path(@organization), class: 'btn btn-primary' %>
