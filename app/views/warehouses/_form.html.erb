<%= simple_form_for @warehouse do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, input_html: { autofocus: true } %>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= Supply.model_name.human count: 0 %>
          <small><%= add_item_link %></small>
        </h3>
      </div>
      <div id="supplies" class="panel-body">
        <%= f.simple_fields_for :supplies, warehouse_supplies do |rif| %>
          <%= render 'supplies/supply', f: rif %>
        <% end %>

        <%= link_to_add_fields t('warehouses.new.supply'), f, :supplies %>
      </div>
    </div>

    <%= f.input :lock_version, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
