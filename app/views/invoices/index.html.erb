<% if @invoices.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Invoice.human_attribute_name 'number' %></th>
        <th class="visible-lg"><%= Invoice.human_attribute_name 'created_at' %></th>
        <th><%= Invoice.human_attribute_name 'customer' %></th>
        <th colspan="3">
          <%= link_to_new new_book_invoice_path(@book), class: 'btn btn-default btn-xs pull-right' %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @invoices.each do |invoice| %>
        <tr>
          <td><%= invoice.number %></td>
          <td class="visible-lg"><%= l invoice_date(invoice) %></td>
          <td><%= invoice.customer %></td>
          <td><%= link_to_show invoice %></td>
          <td><%= link_to_edit [:edit, invoice] %></td>
          <td><%= link_to_destroy invoice %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @invoices %>
<% end %>

<%= link_to_new new_book_invoice_path(@book), class: 'btn btn-primary' %>
