<%= simple_form_for([@organization, @invoice]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number, input_html: { autofocus: true } %>
    <%= f.association :customer %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
