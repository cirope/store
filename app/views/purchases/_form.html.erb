<%= simple_form_for @purchase.new_record? ? [@book, @purchase] : @purchase do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= f.input :provider, as: :autocomplete, label: provider_label, url: providers_path, input_html: { autofocus: true } %>
        <div class="row">
          <div class="col-md-6">
            <%= f.input :requested_at, as: :date_picker %>
          </div>
          <div class="col-md-6">
            <%= f.input :delivered_at, as: :date_picker %>
          </div>
        </div>
      </div>
    </div>
    <%= f.input :lock_version, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
