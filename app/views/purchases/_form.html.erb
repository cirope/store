<%= simple_form_for @purchase.new_record? ? [@book, @purchase] : @purchase do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :provider, prompt: true %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :requested_at, as: :string %>
      </div>
      <div class="col-md-6">
        <%= f.input :delivered_at, as: :string %>
      </div>
    </div>
    <%= f.input :lock_version, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
