<header>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title text-center">
        <a data-toggle="collapse" href="#header-body">
          <%= t 'purchases.header' %>
        </a>
      </h3>
    </div>
    <div id="header-body" class="collapse <%= 'in' if action_name == 'show' %>">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-5">
            <%= render @book.organization_entity %>
          </div>
          <div class="col-md-5 col-md-offset-2 text-right">
            <p>
              <%= Purchase.human_attribute_name 'number' %>
              <span class="label label-default">
                <%= '%012d' % purchase_number %>
              </span>
            </p>

            <p class="small">
              <%= Purchase.human_attribute_name 'created_at' %>: <%= l purchase_date %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
