<% if @purchases.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Purchase.human_attribute_name 'number' %></th>
        <th><%= Purchase.human_attribute_name 'provider' %></th>
        <th colspan="3">
          <%= link_to_new new_book_purchase_path(@book), class: 'btn btn-default btn-xs pull-right' %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @purchases.each do |purchase| %>
        <tr>
          <td><%= purchase.number %></td>
          <td><%= purchase.provider %></td>
          <td><%= link_to_show purchase %></td>
          <td><%= link_to_edit [:edit, purchase] %></td>
          <td><%= link_to_destroy purchase %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to_new new_book_purchase_path(@book), class: 'btn btn-primary' %>
