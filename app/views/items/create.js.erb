<% if @item.persisted? %>
  $('#modal').on('hidden.bs.modal', function(e) {
    $('#modal').remove();
  }).modal('hide');

  $('input[name$="[commodity]"]:last').val('<%= j @item.to_s %>');
  $('input[name$="[commodity_id]"]:last').val('<%= @item.commodity.id %>');
  $('input[name$="[commodity]"]:last').trigger({
    type: 'update.autocomplete',
    item: <%== render template: 'items/show.json' %>
  });
<% else %>
  <%= render template: 'items/new' %>
<% end %>
