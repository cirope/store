<%= simple_form_for @item, data: remote_if_xhr do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code, input_html: { autofocus: true } %>
    <%= f.simple_fields_for :commodity, item_commodity do |cf| %>
      <%= cf.input :name %>
      <%= cf.input :price, as: :string %>
      <%= cf.input :lock_version, as: :hidden %>
    <% end %>
    <%= f.input :unit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
