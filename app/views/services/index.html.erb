<% if @services.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Commodity.human_attribute_name 'name' %></th>
        <th class="visible-lg"><%= Commodity.human_attribute_name 'price' %></th>
        <th colspan="3">
          <%= link_to_new new_service_path, class: 'btn btn-default btn-xs pull-right' %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.name %></td>
          <td class="visible-lg"><%= number_to_currency service.price %></td>
          <td><%= link_to_show service %></td>
          <td><%= link_to_edit [:edit, service] %></td>
          <td><%= link_to_destroy service %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to_new new_service_path, class: 'btn btn-primary' %>
