<% if @customer.persisted? %>
  $('#modal').on('hidden.bs.modal', function(e) {
    $('#modal').remove();
  }).modal('hide');

  $('input[name$="[customer]"]').val('<%= j @customer.to_s %>');
  $('input[name$="[customer_id]"]').val('<%= j @customer.id.to_s %>');
  $('input[name$="[customer]"]').trigger({
    type: 'update.autocomplete',
    item: <%== render(template: 'customers/show.json') %>
  });
<% else %>
  <%= render template: 'customers/new' %>
<% end %>
