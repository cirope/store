<% if @customers.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Entity.human_attribute_name 'tax_id' %></th>
        <th><%= Entity.human_attribute_name 'name' %></th>
        <th colspan="3">
          <%= link_to_new new_customer_path, class: 'btn btn-default btn-xs pull-right' %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.tax_id %></td>
          <td><%= customer.name %></td>
          <td><%= link_to_show customer %></td>
          <td><%= link_to_edit [:edit, customer] %></td>
          <td><%= link_to_destroy customer %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @customers %>
<% end %>

<%= link_to_new new_customer_path, class: 'btn btn-primary' %>
